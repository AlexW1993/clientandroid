<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageConnexion" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fond_blanc"
        android:layout_width="408dp"
        android:layout_height="171dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


<ImageView
android:id="@+id/ombre_fond_gris"
android:src="@drawable/ombre_fond"
android:layout_width="0dp"
android:layout_height="72dp"
android:layout_marginStart="-5dp"
android:layout_marginEnd="-5dp"
app:layout_constraintBottom_toTopOf="@+id/fond_rouge"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.78"
app:layout_constraintStart_toStartOf="parent" />
    />

<ImageView
android:id="@+id/barre_grise"
android:layout_width="0dp"
android:layout_height="113dp"
android:src="@drawable/barre_grise"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="1.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/fond_blanc" />

<ImageView
android:id="@+id/ombre_fond_rouge"
android:layout_width="0dp"
android:layout_height="8dp"
android:layout_marginStart="-10dp"
android:layout_marginEnd="-10dp"
android:src="@drawable/shadow"
app:layout_constraintBottom_toTopOf="@+id/fond_rouge"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fond_rouge"
        android:layout_width="414dp"
        android:layout_height="501dp"
        android:background="#8E1616"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ombre_bouton_rouge"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ombre_bouton"
            app:layout_constraintBottom_toBottomOf="@+id/bouton_rouge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/bouton_rouge"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/bouton_rouge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/ombre_texte"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ombre_texte"
            app:layout_constraintBottom_toBottomOf="@+id/zone_texte"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/zone_texte_fond"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/bouton_blanc"
            app:layout_constraintBottom_toBottomOf="@+id/zone_texte"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/zone_texte"
            android:layout_width="250dp"
            android:layout_height="86dp"
            android:layout_marginTop="70dp"
            android:hint="Surnom"
            android:src="@drawable/bouton_blanc"
            android:textAlignment="center"
            android:textColor="#431212"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/ombre_texte2"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ombre_texte"
            app:layout_constraintBottom_toBottomOf="@+id/zone_texte2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.965" />

        <ImageView
            android:id="@+id/zone_texte_fond2"
            android:layout_width="279dp"
            android:layout_height="86dp"
            android:layout_marginTop="216dp"
            android:src="@drawable/bouton_blanc"
            app:layout_constraintBottom_toBottomOf="@+id/zone_texte2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.965"
            />

        <EditText
            android:id="@+id/zone_texte2"
            android:layout_width="250dp"
            android:layout_height="86dp"
            android:layout_marginTop="216dp"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:src="@drawable/bouton_blanc"
            android:textAlignment="center"
            android:textColor="#431212"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/texte_bouton_rouge"
            android:layout_width="258dp"
            android:layout_height="44dp"
            android:fontFamily="sans-serif-thin"
            android:text="Se connecter"
            android:textAlignment="center"
            android:textColor="#431212"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/bouton_rouge"
            app:layout_constraintEnd_toEndOf="@+id/bouton_rouge"
            app:layout_constraintStart_toStartOf="@+id/bouton_rouge"
            app:layout_constraintTop_toTopOf="@+id/bouton_rouge" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>